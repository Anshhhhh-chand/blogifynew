<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <title>Blogify - Discover Amazing Stories</title>
  </head>
  <body>
    <%- include('partials/nav') %>
    
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <h1 class="fade-in">Discover Amazing Stories</h1>
        <p class="fade-in">Explore thought-provoking articles, share your ideas, and connect with writers from around the world.</p>
        <% if (locals.user) { %>
          <a href="/blog/add-new" class="btn btn-light btn-lg mt-3 fade-in">Write Your Story</a>
        <% } else { %>
          <a href="/user/signup" class="btn btn-light btn-lg mt-3 fade-in">Join Our Community</a>
        <% } %>
      </div>
    </section>

    <!-- Blog Grid -->
    <div class="container">
      <div class="row mb-4">
        <div class="col-12">
          <h2 class="text-center mb-4">Latest Stories</h2>
        </div>
      </div>
      
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% blogs.forEach((blog, index) => { %>
          <div class="col fade-in" style="animation-delay: <%= index * 0.1 %>s;">
            <div class="card h-100">
              <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>" style="max-width: 400px; max-height: 300px; width: 100%; height: auto; object-fit: cover;" />
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text text-muted">
                  <% if (blog.body.length > 100) { %>
                    <%= blog.body.substring(0, 100) %>...
                  <% } else { %>
                    <%= blog.body %>
                  <% } %>
                </p>
                <div class="mt-auto">
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary w-100">Read More</a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      
      <% if (blogs.length === 0) { %>
        <div class="text-center py-5">
          <h3 class="text-muted">No stories yet</h3>
          <p class="text-muted">Be the first to share your story!</p>
          <% if (locals.user) { %>
            <a href="/blog/add-new" class="btn btn-primary">Write Your First Story</a>
          <% } else { %>
            <a href="/user/signup" class="btn btn-primary">Join and Start Writing</a>
          <% } %>
        </div>
      <% } %>
    </div>

    <%- include('./partials/footer') %>
    <%- include('./partials/scripts') %>
  </body>
</html>
