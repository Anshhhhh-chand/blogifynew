<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <title>My Blogs - Blogify</title>
  </head>
  <body>
    <%- include('partials/nav') %>
    <main>
      <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="mb-0">My Blogs</h2>
          <a href="/blog/add-new" class="btn btn-primary">Write New Blog</a>
        </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% if (blogs.length > 0) { %>
            <% blogs.forEach((blog, index) => { %>
              <div class="col fade-in" style="animation-delay: <%= index * 0.1 %>s;">
                <div class="card h-100">
                  <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>" style="height:180px;object-fit:cover;">
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= blog.title %></h5>
                    <p class="card-text text-muted">
                      <% if (blog.body.length > 100) { %>
                        <%= blog.body.substring(0, 100) %>...
                      <% } else { %>
                        <%= blog.body %>
                      <% } %>
                    </p>
                    <div class="mt-auto d-flex gap-2">
                      <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary btn-sm">View</a>
                      <a href="/blog/edit/<%= blog._id %>" class="btn btn-outline-secondary btn-sm">Edit</a>
                      <form action="/blog/delete/<%= blog._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this blog?')">Delete</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="col-12 text-center py-5">
              <h4 class="text-muted">You haven't written any blogs yet.</h4>
              <a href="/blog/add-new" class="btn btn-primary mt-3">Write Your First Blog</a>
            </div>
          <% } %>
        </div>
      </div>
    </main>
    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>
  </body>
</html> 